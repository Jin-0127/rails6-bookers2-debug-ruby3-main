<table>
  <tbody>
      <% book.post_comments.each do |post_comment| %>
          <tr>
            <td>
              <%= image_tag post_comment.user.get_profile_image, size:"100x100"  %> 
              <%= post_comment.comment %>
              <%= link_to "destroy",book_post_comment_path(post_comment.book,post_comment),method: :delete, remote: true , class: "btn btn-sm btn-danger" %></br>
              <%= post_comment.user.name %>
            </td>
          </tr>
      <% end %> 
  </tbody>
</table>